<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_menu_expand_item_height"
        android:layout_gravity="center_vertical"
        android:background="#323a3f"
        >
        <ImageView
            android:id="@+id/menu_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/navigation_menu_expand_item_icon_margin_left"
            />
        <TextView
            android:id="@+id/menu_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/navigation_menu_expand_item_title_margin_left"
            android:textColor="@drawable/navigation_menu_item_text_selector"
            />
        <alex.mirash.mirashreader.menu.item.view.ExpandButton
            xmlns:button="http://schemas.android.com/apk/res-auto"
            android:id="@+id/menu_item_expand_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="@dimen/navigation_menu_expand_item_expand_button_margin_right"
            android:src="@drawable/arrow_menu_closed"
            button:collapsedResourceId="@drawable/arrow_menu_closed"
            button:expandedResourceId="@drawable/arrow_menu_open"
            />
    </FrameLayout>
    <FrameLayout
        android:id="@+id/menu_inner_items_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        />
</LinearLayout>
